<div class="{{block}}" data-direction="{{data.direction}}">
    {{#if (equal data.direction "incoming")}}
        <div class="{{classElement block "name"}}">
            {{data.author}}
        </div>
    {{/if}}

    {{#if data.text}}
        <div class="{{classElement block "text"}}">{{data.text}}</div>
    {{/if}}

    {{#if data.attachments}}
        <div class="{{classElement block "attachments"}}">
            <div class="{{classElement block "images"}}">
                {{#each data.attachments}}
                    {{> c-image newContext src=this.src ratio="16/9"}}
                {{/each}}
            </div>
        </div>
    {{/if}}

    <div class="{{classElement block "status"}}">
        {{#if (equal data.direction "outgoing")}}
            <svg width="11" height="5" viewBox="0 0 11 5" fill="none" xmlns="http://www.w3.org/2000/svg">
                <line y1="-0.5" x2="3.765" y2="-0.5" transform="matrix(0.705933 0.708278 -0.705933 0.708278 0.700195 2.33301)" stroke="#9096ff"/>
                <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 3.35828 5)" stroke="#9096ff"/>
                <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 6.01587 5)" stroke="#9096ff"/>
            </svg>
        {{/if}}
        {{> c-time newContext time=data.time}}
    </div>
</div>
